{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.user_list'|trans }}
{% endblock %}

{% block body %}
        <h1>{{ 'title.user_list'|trans }}</h1>
    <div style="margin-bottom: 20px">
        <a class="btn btn-outline-primary" href="{{ url('user_create') }}" title="{{ 'action.create'|trans }}">
            {{ 'action.create'|trans }}
        </a>
    </div>
        {% if pagination is defined and pagination.items|length %}

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

            <table class="table table-striped">
                <thead>
                <tr>
                    <th>{{ knp_pagination_sortable(pagination, 'user.id'|trans, 'user.id') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'user.email'|trans, 'user.email') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'user.name'|trans, 'user.name') }}</th>
                    <th>{{ knp_pagination_sortable(pagination, 'user.roles'|trans, 'user.roles') }}</th>
                    <th>{{ 'label.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in pagination.items %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.roles|join(', ') }}</td>
                        <td>
                            {% if is_granted('VIEW', user) %}
                                <a class="btn btn-outline-info" href="{{ url('user_show', {id: user.id}) }}" title="{{ 'action.show'|trans }}">
                                    {{ 'action.show'|trans }}
                                </a>
                            {% endif %}
                            {% if is_granted('EDIT', user) %}
                                <a class="btn btn-outline-success" href="{{ url('user_edit', {id: user.id}) }}" title="{{ 'action.edit'|trans }}">
                                    {{ 'action.edit'|trans }}
                                </a>
                            {% endif %}
                            {% if is_granted('EDIT', user) %}
                            <a class="btn btn-outline-success" href="{{ url('user_password', {id: user.id}) }}" title="{{ 'action.password'|trans }}">
                                {{ 'action.password'|trans }}
                            </a>
                            {% endif %}
                            {% if is_granted('DELETE', user) %}
                                <a class="btn btn-outline-danger" href="{{ url('user_delete', {id: user.id}) }}" title="{{ 'action.delete'|trans }}">
                                    {{ 'action.delete'|trans }}
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="navigation text-center">
                {{ knp_pagination_render(pagination) }}
            </div>

        {% else %}
            <p>
                {{ 'message.empty_list'|trans }}
            </p>
        {% endif %}
{% endblock %}